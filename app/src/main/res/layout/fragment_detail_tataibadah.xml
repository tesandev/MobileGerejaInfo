<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailTataibadahFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/headerDetailTataibadah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/cardview_light_background"
            app:strokeWidth="1dp"
            app:cardElevation="10dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <View
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:background="@color/purple_700"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/titleDetailtataibadah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Halaman Detail Tata Ibadah"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="17sp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/separator"
            android:layout_below="@+id/headerDetailTataibadah"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_700"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_below="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/cardview_light_background"
            app:strokeWidth="1dp"
            app:cardElevation="10dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/bodyDetailtataibadah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Content Body"
                    android:textSize="14sp"/>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</FrameLayout>